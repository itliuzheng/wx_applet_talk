/* components/nav/nav.wxss */

.title {
    position: sticky;
    top: 0;
    width: 750rpx;
    height: 80rpx;
    z-index: 99999;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
  }
  .name{
    width: 200rpx;
    text-align: center;
  }
  .nav-back-block {
    display: flex;
    height: 32px;
    width: 86px;
    align-items: center;
    justify-content: center;
    position: absolute;
    left: 10px;
    bottom: 15rpx;
    border-radius: 32px;
    background-color: rgba(255, 255, 255, 0.65);
    border: 1rpx solid rgba(214, 212, 211, 0.5);
    box-sizing: border-box;
    z-index: 10000;
  }
  
  .nav-back-icon {
    height: 16rpx;
    width: 16rpx;
    border: 6rpx solid black;
    border-right-color: transparent;
    border-bottom-color: transparent;
    transform: rotate(-45deg);
  }
  
  .nav-back-text {
    font-size: 16px;
  }
  .arrow-box{
    position: fixed;
    left: 25rpx;
    display: flex;
    align-items: center;
  }
  .arrow{
    width: 24rpx;
    height: 24rpx;
    border-left: 4rpx solid #000;
    border-top: 4rpx solid #000;
    transform: rotate(-45deg);
    position: relative;
    top: 6rpx;
  }
  
  