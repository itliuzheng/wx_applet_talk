
.comment-box{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 999;
}

.comment-form{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 40rpx 28rpx 60rpx 40rpx;
}
.comment-form .comment-content{
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.comment-form form .comment-input{
  
  /* height: 70rpx; */
  /* line-height: 70rpx; */
  width: 100%;
  line-height: 1;
  font-size: 28rpx;
}
.comment-textarea{
  width: 568rpx;
  border: 2rpx solid #888888;
  padding: 15rpx 40rpx 0;
  background: #FFFFFF;
  border-radius: 41rpx;
  min-height: 28rpx;
  display: flex;
  align-items: center;
}
.comment-input-placeholder{
  /* line-height: 70rpx; */
  /* padding-top: 20rpx; */
}
.comment-form .comment-btn{
  color: #475BF4;
  font-size: 32rpx;
  font-family: GenSenRoundedJP-L;
  font-weight: bold;
  background: none;
  white-space: nowrap;
}

.comment-btn::after{
  border: none;
}