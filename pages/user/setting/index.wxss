.ul {
  background: #fff;
  padding-bottom: 50rpx;
}
.ul .li {
  padding: 30rpx 57rpx 0 64rpx;
}
.ul .li .title {
  font-size: 24rpx;
  color: #868686;
}
.ul .li .content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #D0D0D0;
  padding: 14rpx 0 22rpx;
  line-height: 48rpx;
  font-size: 24rpx;
}
.ul .li .content .avatar {
  width: 60rpx;
  height: 60rpx;
  background-color: transparent;
  background-size: 100%;
  border-radius: 50%;
}
.ul .li .content .remark {
  color: #010F07;
}
.ul .li .content .btn {
  font-size: 24rpx;
  background: transparent;
  color: #3f4870;
  text-align: right;
  padding-right: 0;
}
